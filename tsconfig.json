{
  "compilerOptions": {
    "strict": true, // use strict랑 같은듯...? 엄격하게 타입을 검사함
    "module": "ESNext", // 가능하면 최신으로 써보자
    "moduleResolution": "classic",
    "target": "ESNext",
    "lib": ["ESNext"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*", "tests/**/*.spec.ts"]
}
